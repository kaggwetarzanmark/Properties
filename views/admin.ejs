<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Atlas Property Management</title>
    <link rel="shortcut icon" type="image/png" href="images/favicon.ico">
    <!-- font awesome cdn link  -->
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">
    <!-- custom css file link  -->
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <!-- header section starts  -->
    <header>
        <a href="#" class="logo" style="text-decoration: none;"> <span>Atlas
            </span>Real Estate</a>
        <nav class="navbar">
            
            <form action="/logout" method="GET" class="d-inline">
                <button type="submit" class="btn btn-outline-primary custom-button">Logout</button>
            </form>

            <style>
                .custom-button {
                    background-color: #3b4fe6;
                    border-color: white;
                    color: white;
                    padding: 5px 10px;
                    font-size: 14px;
                    margin-top: -5px;
                }
                .custom-button:hover {
                    color: #3b4fe6;
                    background-color: #fffff0;
                }
            </style>
        </nav>
    </header>
    <section style="margin-top: 100px;">
        <style>
            .custom-button {
                display: inline-flex;
                margin-top: 0.75rem;
                padding: 0.5rem 1rem;
                color: white;
                font-size: 1rem;
                line-height: 1.5rem;
                font-weight: 500;
                justify-content: center;
                width: 100%;
                border-radius: 0.375rem;
                border: 1px solid white;
                background-color: #6777ef;
            }
            .custom-button:hover {
                border-color: #6777ef;
                color: #6777ef;
                background-color: white;
            }

            /* Additional CSS for fixed size and horizontal display */
            .card-container {
                display: flex;
                flex-wrap: wrap;
            }

            .card {
                width: calc((100% - 60px) / 3); /* Adjust the desired card width here */
                margin: 10px;
            }
        </style>
        <div class="container card-container">
            <% properties.forEach(property => { %>
            <div class="card">
                <!-- Card image -->
                <div class="view overlay">
                    <img class="card-img-top" src="<%= property.photos %>" alt="Card image cap">
                    <a href="#!">
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>
                <!-- Card content -->
                <div class="card-body">
                    <!-- Property Name -->
                    <h4 class="card-title"><%= property.propertyName %></h4>
                    <!-- Type -->
                    <p class="card-text">Type: <%= property.type %></p>
                    <!-- Location -->
                    <p class="card-text">Location: <%= property.location %></p>
                    <!-- Bedrooms -->
                    <p class="card-text">Bedrooms: <%= property.bedrooms %></p>
                    <!-- Bathrooms -->
                    <p class="card-text">Bathrooms: <%= property.bathrooms %></p>
                    <!-- Description -->
                    <p class="card-text">Description: <%= property.description %></p>
                    <!-- Cost -->
                    <p class="card-text">Cost: <%= property.cost %></p>
                    <!-- Username -->
                    <p class="card-text">Username: <%= property.username %></p>
                    <!-- Button -->
                    <form action="/admin" method="POST">
                        <input type="hidden" name="propertyId" value="<%= property.propertyId %>">
                        <button type="submit" class="btn btn-primary custom-button">Approve</button>
                    </form>
                </div>
            </div>
            <% }) %>
        </div>
    </section>
    <section>
        <div class="credit"> <span> Atlas Property Management</span> | all
            rights reserved! </div>
    </section>
    <!-- Include jQuery library -->
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js">
    </script>
</body>
</html>
